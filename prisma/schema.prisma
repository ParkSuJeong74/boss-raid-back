generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id                Int                @id @default(autoincrement())
  name              String             @db.VarChar(20)
  BossRaidHistory   BossRaidHistory[]
  BossRaid          BossRaid[]       
}

model BossRaidHistory{
  id                Int                @id @default(autoincrement())
  score             Int
  enterTime         String
  endTime           String
  user_id           Int
  User              User               @relation(fields: [user_id], references: [id])
}

model BossRaid{
  id                Int                @id @default(autoincrement())
  level             Int                @unique
  canEnter          Boolean            @default(true)
  totalScore        Int
  enteredUserId     Int?               
  User              User?              @relation(fields: [enteredUserId], references: [id])
}